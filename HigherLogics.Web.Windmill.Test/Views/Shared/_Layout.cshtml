@model GlobalViewModel
<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model - Windmill Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/windmill/css/tailwind.output.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <script defer src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>
    <script src="~/windmill/js/init-alpine.js" asp-append-version="true"></script>
    <script src="~/windmill/js/focus-trap.js" asp-append-version="true"></script>
</head>
<body>
    <windmill-container>
        <windmill-sidebar name="Windmill">
            <windmill-sidebar-link active="@(Model.Page == "Index")" href="@Url.Action("Index", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span class="ml-4">Dashboard</span>
            </windmill-sidebar-link>
            <windmill-sidebar-link active="@(Model.Page == "Forms")" href="@Url.Action("Forms", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
                <span class="ml-4">Forms</span>
            </windmill-sidebar-link>
            <windmill-sidebar-link active="@(Model.Page == "Cards")" href="@Url.Action("Cards", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
                <span class="ml-4">Cards</span>
            </windmill-sidebar-link>
            <windmill-sidebar-link active="@(Model.Page == "Charts")" href="@Url.Action("Charts", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                    <path d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
                </svg>
                <span class="ml-4">Charts</span>
            </windmill-sidebar-link>
            <windmill-sidebar-link active="@(Model.Page == "Buttons")" href="@Url.Action("Buttons", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>
                </svg>
                <span class="ml-4">Buttons</span>
            </windmill-sidebar-link>
            <windmill-sidebar-link active="@(Model.Page == "Modals")" href="@Url.Action("Modals", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <span class="ml-4">Modals</span>
            </windmill-sidebar-link>
            <windmill-sidebar-link active="@(Model.Page == "Tables")" href="@Url.Action("Tables", "Home")">
                <svg class="w-5 h-5"
                     aria-hidden="true"
                     fill="none"
                     stroke-linecap="round"
                     stroke-linejoin="round"
                     stroke-width="2"
                     viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                </svg>
                <span class="ml-4">Tables</span>
            </windmill-sidebar-link>
            <windmill-sidebar-menu>
                <windmill-sidebar-menu-title>
                    <span class="inline-flex items-center">
                        <svg class="w-5 h-5"
                             aria-hidden="true"
                             fill="none"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             stroke-width="2"
                             viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                        </svg>
                        <span class="ml-4">Pages</span>
                    </span>
                </windmill-sidebar-menu-title>
                <windmill-sidebar-menu-list>
                    <windmill-sidebar-menu-link href="@Url.Action("Login", "Home")">Login</windmill-sidebar-menu-link>
                    <windmill-sidebar-menu-link href="@Url.Action("CreateAccount", "Home")">Create account</windmill-sidebar-menu-link>
                    <windmill-sidebar-menu-link href="@Url.Action("ForgotPassword", "Home")">Forgot password</windmill-sidebar-menu-link>
                    <windmill-sidebar-menu-link href="@Url.Action("Missing", "Home")">404</windmill-sidebar-menu-link>
                    <windmill-sidebar-menu-link href="@Url.Action("Blank", "Home")">Blank</windmill-sidebar-menu-link>
                </windmill-sidebar-menu-list>
            </windmill-sidebar-menu>
            <div class="px-6 py-6 mt-6">
                <windmill-button size="Regular" class="flex items-center text-white bg-purple-600 focus:shadow-outline-purple justify-between w-full">
                    Create account <span class="ml-2" aria-hidden="true">+</span>
                </windmill-button>
            </div>
        </windmill-sidebar>
        <div class="flex flex-col flex-1">
            <windmill-header>
                <windmill-search placeholder="Search for projects" aria-label="Search" />
                <windmill-action-list>
                    <windmill-action class="flex">
                        <windmill-toggle-theme></windmill-toggle-theme>
                    </windmill-action>
                    <windmill-action class="relative">
                        <windmill-action-icon x-on:click="toggleNotificationsMenu" x-on:keydown.escape="closeNotificationsMenu" x-on:click.away="closeNotificationsMenu" aria-label="Notifications">
                            <svg class="w-5 h-5"
                                 aria-hidden="true"
                                 fill="currentColor"
                                 viewBox="0 0 20 20">
                                <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"></path>
                            </svg>
                            <windmill-action-badge></windmill-action-badge>
                        </windmill-action-icon>
                        <windmill-action-menu-list x-if="isNotificationsMenuOpen">
                            <windmill-action-menu-link href="#" extra="13">Messages</windmill-action-menu-link>
                            <windmill-action-menu-link href="#" extra="2">Sales</windmill-action-menu-link>
                            <windmill-action-menu-link href="#">Alerts</windmill-action-menu-link>
                        </windmill-action-menu-list>
                    </windmill-action>
                    <windmill-action class="relative">
                        <windmill-action-icon x-on:keydown.escape="closeProfileMenu" x-on:click="toggleProfileMenu" x-on:click.away="closeProfileMenu" aria-haspopup="true" aria-label="Profile">
                            <img class="object-cover w-8 h-8 rounded-full"
                                 src="https://images.unsplash.com/photo-1502378735452-bc7d86632805?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=200&fit=max&s=aa3a807e1bbdfd4364d1f449eaa96d82"
                                 alt=""
                                 aria-hidden="true" />
                        </windmill-action-icon>
                        <windmill-action-menu-list x-if="isProfileMenuOpen">
                            <windmill-action-menu-link href="#">
                                <svg class="w-4 h-4 mr-3"
                                     aria-hidden="true"
                                     fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round"
                                     stroke-width="2"
                                     viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span>Profile</span>
                            </windmill-action-menu-link>
                            <windmill-action-menu-link href="#">
                                <svg class="w-4 h-4 mr-3"
                                     aria-hidden="true"
                                     fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round"
                                     stroke-width="2"
                                     viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <span>Settings</span>
                            </windmill-action-menu-link>
                            <windmill-action-menu-link href="#">
                                <svg class="w-4 h-4 mr-3"
                                     aria-hidden="true"
                                     fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round"
                                     stroke-width="2"
                                     viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                                </svg>
                                <span>Log out</span>
                            </windmill-action-menu-link>
                        </windmill-action-menu-list>
                    </windmill-action>
                </windmill-action-list>
            </windmill-header>
            <windmill-main>
                @RenderBody()
            </windmill-main>
        </div>
    </windmill-container>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Modals", required: false)
</body>
</html>
